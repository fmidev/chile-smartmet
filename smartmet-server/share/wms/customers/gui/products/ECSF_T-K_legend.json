{
    "title": "ECSF Temperature in Kelvins",
    "abstract": "T-K with legend",
    "projection": {},
    "producer": "ECSF",
    "source": "grid",
    "refs": {},
    "defs": {
        "styles": {
            ".Label": { "font": "Arial", "font-size": 9 },
            ".Units": { "font": "Arial", "font-size": 11 }
        },
        "layers": [  {
            "tag": "symbol",
            "attributes": { "id": "rect" },
            "layers": [ {
                "tag": "rect",
                "attributes": { "width": "14", "height": "12"}
            } ]
        },
                     {
                         "tag": "symbol",
                         "attributes": { "id": "uptriangle" },
                         "layers": [ {
                             "tag": "path",
                             "attributes": {"d": "M0 12,7 0,14 12Z"}
                         } ]
                     } ]
    },
    "views":[{
        "layers": [
            {
                // Draw temperature isobands
                "qid": "l",
                "layer_type": "isoband",
                "isobands": "json:isobands/temperature_K.json",
                "css": "isobands/temperature.css",
                "parameter": "T-K:ECSF::1:0:1",
                "sampling":{
                    "relativeresolution": 4
                },
                "attributes": {
                    "shape-rendering": "crispEdges"
		}
            },
            {
                // Draw wind legend
                "layer_type": "legend",
                "x": 10, "y": 10, "dx": 0, "dy": 12,
                "isobands": "json:isobands/temperature_K.json",
                "symbols": {
                    "css": "isobands/temperature.css",
                    "symbol": "rect",
                //   "start": "uptriangle",
                   "attributes": {"stroke": "black", "stroke-width": "0.5"}
                },
                "labels":  {
		   "type": "lolimit",
                   "dx": 18,
                   "dy": 14,
                   "conversions": {"38": "38"}
                },
                "attributes": {
                    "transform": "translate(-7 0)",
                    "id": "windlegend",
                    "class": "Label"
                },
                "layers": [ {
                    "tag": "text",
                    "cdata": "K",
                    "attributes": { "x": 28, "y": 12, "class": "Units" }
                }]
            }
        ]
    }]
}

